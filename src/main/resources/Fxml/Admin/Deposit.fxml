<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="750.0" stylesheets="@../../Styles/Deposit.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.boibank.Contoroler.Admin.DepositeController">
    <VBox layoutX="14.0" layoutY="90.0" prefHeight="470.0" prefWidth="720.0" AnchorPane.bottomAnchor="90.0" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="90.0">
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="720.0" styleClass="search_box">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Search By Payee Address:" />
            <TextField fx:id="pAddress_fld" />
            <Button fx:id="search_btn" mnemonicParsing="false" text="Search" textFill="#ede8e8">
                <graphic>
                    <FontAwesomeIconView fill="#dddddd" glyphName="SEARCH" size="20" text="" />
                </graphic>
            </Button>
        </HBox>
        <ListView fx:id="result_listview" prefHeight="200.0" prefWidth="720.0" />
        <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="222.0" prefWidth="720.0" styleClass="diposit_box">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Deposite Section" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Amount" />
            <TextField fx:id="amount_fld" />
            <Button fx:id="deposit_btn" mnemonicParsing="false" text="Deposite">
                <graphic>
                    <FontAwesomeIconView fill="#f5f3f3" glyphName="MONEY" size="20" text="" />
                </graphic>
            </Button>
        </VBox>
    </VBox>
</AnchorPane>
